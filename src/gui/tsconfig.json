{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "checkJs": true,
        "isolatedModules": true,
        "module": "esnext",
        "moduleDetection": "force",
        "paths": {
            "$lib": ["./src/lib"],
            "$lib/*": ["./src/lib/*"]
        },
        "resolveJsonModule": true,
        "target": "es2022",
        "useDefineForClassFields": true
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
